<% include ../partials/header%>

    <div class="container">    
        <header class="jumbotron">
            <div class="jumbotron">
                <h1><span class="glyphicon glyphicon-thumbs-up align-bottom" aria-hidden="true"></span>Welcome To Chinese Food Recipes</h1>
                <form class="form-inline" action="/recipes" method="GET">
                  <div class="form-group has-feedback">
                    <label for="search"></label>
                    <input class="form-control" type="text" name="search" placeholder="Search recipes" autocomplete="off" />
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    <input type="radio" name="searchContent" value="name"> Name
                    <input type="radio" name="searchContent" value="ingredient "> Ingredient 
                  </div>
                </form>
                <hr>
                <p>
                    <a class="btn btn-default btn-large pull-right" href="/recipes/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Add new recipe</a>
                </p>   
            </div>
        </header>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% if (noMatch !== null) {%>  
              <div class="col-md-12">
                <h4><%= noMatch %></h4>
              </div>
            <% } %>
            <%recipes.forEach(function (recipe) {%>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= recipe.image.url %>" alt="<%= recipe.name %>">
                        <div class="caption">
                            <h4><%= recipe.name%></h4>
                        </div>
                        <p>
                            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
        
    </div>

<% include ../partials/footer %>